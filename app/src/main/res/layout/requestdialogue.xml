<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etwname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button_round"
                android:hint="Worker Name.."
                android:paddingStart="5dp"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/cardview_dark_background" />

            <EditText
                android:id="@+id/etwhouse"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_round"
                android:hint="Worker House #.."
                android:inputType="number"
                android:paddingStart="5dp"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/cardview_dark_background" />

            <EditText
                android:id="@+id/etwstreet"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_round"
                android:hint="Worker Street #.."
                android:inputType="number"
                android:paddingLeft="5dp"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/cardview_dark_background" />

            <Spinner
                android:id="@+id/spwpo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_round"
                android:entries="@array/Colony" />

            <Spinner
                android:id="@+id/spwcity"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_round"
                android:entries="@array/City" />

            <EditText
                android:id="@+id/etwaproxtime"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_round"
                android:hint="Approx Time to reach.."
                android:inputType="number"
                android:paddingStart="5dp"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/cardview_dark_background" />

            <EditText
                android:id="@+id/etcontact"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_round"
                android:hint="Contact..."
                android:inputType="number"
                android:paddingStart="5dp"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/cardview_dark_background" />

            <Button
                android:id="@+id/btnreqdone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@drawable/button_round"
                android:text="Done"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>