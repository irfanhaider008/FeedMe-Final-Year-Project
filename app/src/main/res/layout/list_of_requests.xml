<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient"
    android:orientation="horizontal"
    android:weightSum="4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvrequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Request"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Aprx Time"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvratenoti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/Red" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvinprogress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="In Progress"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/llcolor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="invisible"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnbad"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ratedown" />

                <Button
                    android:id="@+id/btngood"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/rateup" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnaccept"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/button_round"
                android:text="Accept"
                android:textAllCaps="false"
                android:textColor="@color/Green" />

            <Button
                android:id="@+id/btnreject"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/button_round"
                android:text="Reject"
                android:textAllCaps="false"
                android:textColor="@color/Red" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>